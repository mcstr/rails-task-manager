<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>

<li><input list-style:none type="checkbox" <%= @task.completed == true ? "checked" : "" %>><%= @task.completed == true ? "This task is completed" : "This task is incomplete"%></li>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this task", edit_path %>
<%= link_to "Delete", delete_path, method: :delete, data: {confirm: "Are you sure?"} %>

